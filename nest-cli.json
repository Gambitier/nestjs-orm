{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",

  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.png",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.ttf",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "**/*.ejs",
        "watchAssets": true,
        "outDir": "dist/src"
      }
    ]
  }
}
